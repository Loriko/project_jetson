@model BackEndServer.Models.ViewModels.CameraKeyList

@{
    ViewBag.Title = "Project Jetson - Manage Camera Keys";
}

<h1 class="page-title center-align" id="headerManageCameraKeys">Manage Camera Keys</h1>
<div class="row">
    <div class="right-align" style="margin-right: 11px;">
        <a asp-controller="Camera" asp-action="CreateCameraKey" id="create_alert_btn" class="btn-floating btn-large green modal-trigger">
            <i class="large material-icons">add</i>
        </a>
    </div>
</div>

<div id="adminCameraKeys" class="collection">
    @foreach (var cameraKey in Model.ListOfCameraKeys)
    {
    <div class="collection-item">
        <span class="title" id="@cameraKey.CameraId">@cameraKey.Key</span>
        <span class="secondary-content">
            @if (cameraKey.IsRegistered == true)
            {
                <span class="title">Registered</span>
            }
            else
            {
                <span class="title">Not Registered</span>
            }
            <a asp-controller="Camera" asp-action="DeleteCameraKey" asp-route-cameraId="@cameraKey.CameraId"><i class="material-icons">delete</i></a>
        </span>
    </div>
    }
</div>
