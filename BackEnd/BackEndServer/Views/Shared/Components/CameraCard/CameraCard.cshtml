@model BackEndServer.Models.ViewModels.CameraStatistics
<div class="col s12 m4 center-align valign-wrapper">
    <div class="card blue-grey darken-1" id="camera_card">
        <div class="card-content white-text">
            <span class="card-title">Camera Details</span>
            <div class="col s10 offset-s1">
                <div class="card camera-card">
                    <div class="card-image">
    
                        @{
                            if (String.IsNullOrWhiteSpace(Model.CameraInformation.TempImagePath))
                            {
                                <img class="camera-card-image-sm" src="~/images/camera_images/no_location_picture.png" alt="@Model.CameraInformation.CameraName">
                            }
                            else
                            {
                                <img class="camera-card-image-sm" src="../@Model.CameraInformation.TempImagePath.Replace("wwwroot/", "")" alt="@Model.CameraInformation.CameraName">
                            }
                        }
                    </div>
                </div>
            </div>
            <table>
                <tbody>
                <tr>
                    <td class="property-name">Camera Name</td>
                    <td>@Model.CameraDetails.CameraName</td>
                </tr>
            
                @if (Model.CameraDetails.MonitoredArea != null)
                {
                    <tr>
                        <td class="property-name">Monitored Area</td>
                        <td>@Model.CameraDetails.MonitoredArea</td>
                    </tr>
                }
                <tr>
                    <td class="property-name">Camera Key</td>
                    <td>@Model.CameraDetails.CameraKey</td>
                </tr>
                @if (Model.CameraDetails.Brand != null)
                {
                    <tr>
                        <td class="property-name">Brand</td>
                        <td>@Model.CameraDetails.Brand</td>
                    </tr>
                }
                @if (Model.CameraDetails.Resolution != null)
                {
                    <tr>
                        <td class="property-name">Resolution</td>
                        <td>@Model.CameraDetails.Resolution</td>
                    </tr>
                }
                @if (Model.CameraDetails.Model != null)
                {
                    <tr>
                        <td class="property-name">Model</td>
                        <td>@Model.CameraDetails.Model</td>
                    </tr>
                }
                @if (Model.CameraDetails.Location != null)
                {
                    <tr>
                        <td class="property-name">Location</td>
                        <td>@Model.CameraDetails.Location.LocationName</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>